<% @users.each do |user| %>
  <tr>
    <td><%= user.fullname %></td>
    <td><%= user.email %></td>
    <td class="center">
      <%= link_to edit_admin_user_path(user.id), class: "action_manage edit", title: t("admin.users.title_update") do %>
        <i class="fa fa-user-plus" aria-hidden="true"></i>
      <% end %>
      <%= link_to admin_user_path(user.id), method: :delete, data: {confirm: t(".confirm")},
        class: "action_manage delete", title: t("admin.users.del") do %>
        <i class="fa fa-user-times" aria-hidden="true"></i>
      <% end %>
    </td>
  </tr>
<% end %>
<%= will_paginate %>
