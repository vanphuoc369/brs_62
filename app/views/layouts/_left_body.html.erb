<div id="sidebar" class="span3">
  <div class="well well-small">
    <ul class="nav nav-list">
      <strong><%= t "static_pages.Categorys" %></strong>
        <li>
          <button class="w3-button w3-block w3-left-align" onclick="showChilds()">
            <%= t ".type1" %> <i class="fa fa-caret-down"></i>
          </button>
          <div id="list-childs" class="w3-hide w3-white w3-card ">
            <%= link_to t(".type11"), "#", class: "w3-bar-item w3-button category" %>
            <%= link_to t(".type12"), "#", class: "w3-bar-item w3-button category" %>
          </div>
        </li>
    </ul>
  </div>
  <div class="well well-small">
    <ul class="nav nav-list rating">
      <strong><%= "Rating" %></strong>
      <%= render_rating %>
      <li> &nbsp;</li>
    </ul>
  </div>
  <div class="well well-small">
    <ul class="nav nav-list" id= "list_popular_book">
      <strong><%= t "static_pages.title_popular_book" %></strong>
      <%if @popular_books.any? %>
        <% @popular_books.each do |book| %>
          <li>
            <div class="thumbnail">
              <%= link_to book_path(book.id) do %>
                <%= image_tag(book.image, class: "img_popular_books") %>
              <% end %>
              <div class="caption">
                <h5 class="name_popular_books"><%= book.title %></h5>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
