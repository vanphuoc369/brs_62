<div class="well well-small">
  <h3>
    <%= link_to books_path, class: "btn btn-mini pull-right" do %>
      <%= t("static_pages.btn_view_all") %>
      <%= content_tag :span, "", class: "icon-plus" %>
    <% end %>
    <%= t "static_pages.Books" %>
  </h3>
  <hr class="soften"/>
  <div class="row-fluid">
    <ul class="thumbnails">
      <% if @home_books.any? %>
        <% @home_books.each do |book|%>
          <li class="span4">
            <div class="thumbnail">
            <%= link_to image_tag(book.image, class: "img_book"), book_path(book.id) %>
              <div class="caption">
                <h5>
                  <%= book.title %>
                </h5>
              </div>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
